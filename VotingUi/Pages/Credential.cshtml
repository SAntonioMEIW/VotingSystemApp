@page
@model VotingUi.Pages.CredentialModel
@{
    ViewData["Title"] = "Solicitar Credencial";
}

<h2>Solicitar Credencial</h2>

<form method="post">
    <label for="ccNumber">Número do Cartão de Cidadão:</label>
    <input type="text" id="ccNumber" name="CitizenCardNumber" />
    <button type="submit">Solicitar</button>
</form>

@if (ViewData["Message"] != null)
{
    <p>@ViewData["Message"]</p>
}
